<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        tools:context=".ui.LogInFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <include
                layout="@layout/toolbar_log_reg"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="400dp"
                android:background="@drawable/login_reg_bg"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:contentDescription="@string/todo" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="380dp"
                android:layout_marginHorizontal="32dp"
                android:background="@drawable/card_view_shape"
                android:padding="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="16dp"
                    android:backgroundTint="@color/black"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/gotham_bold"
                        android:text="Email"
                        android:layout_marginBottom="6dp"
                        android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                        android:textColor="@color/white" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/background_edit_text"
                        android:hint="Email"
                        android:padding="4dp"
                        android:drawableStart="@drawable/baseline_email_24"
                        android:drawablePadding="4dp"
                        android:textColor="@color/white" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/gotham_bold"
                        android:text="Email is required"
                        android:paddingTop="4dp"
                        android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                        android:textColor="@color/bg_danger" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/gotham_bold"
                        android:text="Password"
                        android:layout_marginTop="4dp"
                        android:paddingVertical="6dp"
                        android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                        android:textColor="@color/white" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:backgroundTint="@color/white"
                        android:padding="4dp"
                        android:hint="Password"
                        android:drawablePadding="4dp"
                        android:drawableStart="@drawable/baseline_lock_24"
                        android:background="@drawable/background_edit_text"
                        android:textColor="@color/white" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/gotham_bold"
                        android:text="Password is required"
                        android:paddingTop="4dp"
                        android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                        android:textColor="@color/bg_danger" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginVertical="8dp"
                        android:fontFamily="@font/gotham_medium"
                        android:gravity="end"
                        android:text="Forget Password?"
                        android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                        android:textColor="@color/blue" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginHorizontal="4dp"
                        android:layout_marginTop="35dp"
                        android:background="@drawable/button_login_bg_orange"
                        android:fontFamily="@font/gotham_bold"
                        android:text="Log In"
                        android:textAllCaps="false" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/gotham_medium"
                        android:gravity="center"
                        android:text="or login with Google Account"
                        android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                        android:textColor="@color/google_account_text" />

                </LinearLayout>


            </FrameLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>