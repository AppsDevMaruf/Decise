<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="52dp"
    android:background="?attr/colorPrimary">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/notification"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="56dp"
            android:adjustViewBounds="true"
            android:padding="2dp"
            android:text="@string/app_name"
            android:visibility="visible"
            app:contentPadding="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearanceOverlay="@style/ShapeAppearance.Image.PILL"
            app:srcCompat="@drawable/ic_notification"
            app:strokeColor="@color/white" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/userProfilePic"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="1dp"
            android:scaleType="centerCrop"
            android:src="@drawable/maruf"
            android:visibility="visible"
            android:layout_marginEnd="10dp"
            app:layout_constraintBottom_toBottomOf="@+id/notification"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/notification"
            app:shapeAppearanceOverlay="@style/ShapeAppearance.Image.PILL"
            app:strokeColor="@color/white"
            app:strokeWidth="1.5dp"
            tools:ignore="MissingConstraints" />

        <!-- <com.google.android.material.imageview.ShapeableImageView
             android:id="@+id/userProfilePic"
             android:layout_width="40dp"
             android:layout_height="40dp"
             android:layout_margin="4dp"
             android:adjustViewBounds="true"
             android:padding="2dp"
             android:scaleType="centerCrop"
             android:text="@string/app_name"
             android:visibility="visible"
             app:contentPadding="4dp"
             app:layout_constraintBottom_toBottomOf="parent"
             app:layout_constraintDimensionRatio="1:1"
             app:layout_constraintEnd_toEndOf="parent"
             app:layout_constraintTop_toTopOf="parent"
             app:shapeAppearanceOverlay="@style/ShapeAppearance.Image.PILL"
             app:srcCompat="@drawable/maruf"
             app:strokeColor="@color/white"
             app:strokeWidth="1dp" />-->

        <TextView
            android:id="@+id/profilePicAB"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="4dp"
            android:background="@drawable/gradient_pink_orange"
            android:fontFamily="@font/gotham_medium"
            android:gravity="center"
            android:includeFontPadding="true"
            android:padding="4dp"
            android:text="AB"
            android:textAllCaps="false"
            android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
            android:textColor="@color/white"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/userProfilePic"
            app:layout_constraintStart_toStartOf="@+id/userProfilePic"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.appcompat.widget.Toolbar>

