<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.Decise" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- This is used for status bar color. -->
        <!--      <item name="colorPrimaryDark">@color/purple_light</item>-->
        <!-- This is used for status bar content color. If status bar Color is light, use "true" otherwise use "false"-->
        <!--<item name="android:windowLightStatusBar">false</item>
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">false</item>-->
        <!-- Primary brand color. -->
        <item name="android:actionBarStyle">@style/CustomActionBar</item>
        <item name="android:textColor">@color/white</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="android:actionMenuTextColor">@color/white</item>
        <item name="android:editTextColor">@color/black</item>
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/purple</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/purple_light</item>
        <item name="colorSecondaryVariant">@color/purple_light</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="actionMenuTextColor">@android:color/white</item>
        <item name="colorControlHighlight">@color/blue</item>
        <item name="colorOnBackground">@color/blue</item>
        <!-- Customize your light theme here. -->
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="editTextColor">@color/black</item>
    </style>

    <style name="ShapeAppearance.Image.PILL" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="editTextStyle" parent="">
        <item name="android:padding">4dp</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="minHeight">48dp</item>
        <item name="android:textAppearance">@style/TextAppearance.Material3.BodyMedium</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="warningText" parent="">
        <item name="android:fontFamily">@font/gotham_bold</item>
        <item name="android:textColor">@color/bg_danger</item>
        <item name="android:padding">1dp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:textAppearance">@style/TextAppearance.Material3.BodySmall</item>
    </style>

    <style name="titleText" parent="">
        <item name="android:fontFamily">@font/gotham_bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">1dp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:textAppearance">@style/TextAppearance.Material3.BodyMedium</item>
    </style>

    <style name="passwordValidateText" parent="">
        <item name="android:fontFamily">@font/gotham_light</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:textAppearance">@style/TextAppearance.Material3.BodySmall</item>
    </style>

    <style name="primaryButtonText" parent="">
        <item name="android:fontFamily">@font/gotham_bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:textAppearance">@style/TextAppearance.Material3.BodyMedium</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="Theme.Decise" parent="Base.Theme.Decise" />

    <style name="CustomActionBar" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@drawable/toolbar_gradient</item>
    </style>

    <style name="AlertDialogTheme" parent="ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:colorAccent">@android:color/black</item>
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">#f00</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">#00f</item>
    </style>
</resources>