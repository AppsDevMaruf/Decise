<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Decise" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- This is used for status bar color. -->
        <item name="colorPrimaryDark">@color/purple_light</item>
        <!-- This is used for status bar content color. If status bar Color is light, use "true" otherwise use "false"-->
        <item name="android:windowLightStatusBar">false</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!-- Primary brand color. -->
        <item name="colorControlNormal">@color/white</item>
        <item name="android:actionMenuTextColor">@color/white</item>
        <item name="android:editTextColor">@color/white</item>
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/purple</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/purple_light</item>
        <item name="colorSecondaryVariant">@color/purple_light</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="actionMenuTextColor">@android:color/white</item>
        <item name="colorControlHighlight">@color/blue</item>
        <item name="colorOnBackground">@color/blue</item>
        <!-- Customize your light theme here. -->
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="editTextColor">@color/black</item>

    </style>
    <style name="ShapeAppearance.Image.PILL" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
    <style name="Theme.Decise" parent="Base.Theme.Decise" />

</resources>